<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreylight"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".UI.Activities.ShopDetailsOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_main_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_7sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lay_dr_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="false"
                        android:onClick="btn_drawyerMenuOpen">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/ic_menu"
                            android:backgroundTint="@color/colorGrey"
                            android:clickable="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/lay_dr_btn"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:gravity="center"
                            android:padding="@dimen/_15sdp"
                            android:text="@string/shop_details"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@android:color/black" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_15sdp"
            android:layout_weight="1"

            card_view:cardElevation="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary">

                            <TextView
                                android:id="@+id/tv_shop_name_shop_details_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:maxLines="1"
                                android:padding="@dimen/_10sdp"
                                android:text="@string/dummy_text_list_item"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_shop_type_shop_details_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:maxLines="1"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/dummy_text_list_details"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <RatingBar
                            android:id="@+id/rb_shop_rating_shop_details_order"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:progressDrawable="@drawable/dr_rating_bar"
                            android:rating="5"
                            android:stepSize="0.5" />
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/dr_corner_view_straight"
                        android:padding="@dimen/_5sdp">

                        <Spinner
                            android:id="@+id/sp_srvice_type_shop_details_order"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"

                            android:prompt="@string/prompt_service" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/dr_corner_view_straight"
                            android:padding="@dimen/_5sdp">

                            <Spinner
                                android:id="@+id/sp_brand_type_shop_details_order"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:prompt="@string/prompt_service" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/dr_corner_view_straight"
                            android:padding="@dimen/_5sdp">

                            <Spinner
                                android:id="@+id/sp_car_model_order"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"

                                android:prompt="@string/prompt_service" />
                        </RelativeLayout>
                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_60sdp"
                        android:layout_marginRight="@dimen/_60sdp"
                        android:background="@drawable/dr_btn_orange"
                        android:clickable="true"
                        android:onClick="GotoOrderNow"
                        android:text="@string/btn_next"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:visibility="visible"
        app:headerLayout="@layout/nav_left_menu"
        app:itemBackground="@drawable/dr_list_item_drawyer_menu_click"
        app:itemIconTint="@color/colorHeliotrope"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/activity_main_drawer" />
</android.support.v4.widget.DrawerLayout>
