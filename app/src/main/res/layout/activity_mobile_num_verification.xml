<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.dtechsystem.carefer.UI.Activities.MobileNumVerifyActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg_app"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/ic_arrow_back_white_48pt_3x"
        android:clickable="true"
        android:onClick="ben_back_to_mobile"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_app_logo"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_20sdp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                android:text="@string/confirm_mobile_number"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/enter_verification_code"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_1_verify"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@drawable/dr_edit_text_bk"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:hint="@string/code_eg"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:nextFocusLeft="@+id/et_2_varify"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_2_verify"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@drawable/dr_edit_text_bk"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:hint="@string/code_eg"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:nextFocusLeft="@+id/et_3_varify"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_3_verify"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@drawable/dr_edit_text_bk"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:hint="@string/code_eg"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:nextFocusLeft="@+id/et_4_varify"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_4_verify"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@drawable/dr_edit_text_bk"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:hint="@string/code_eg"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_verify_pin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_marginRight="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/dr_btn_round_corner_orange_90"                android:clickable="true"
                android:onClick="ben_Next_to_carafePolicy_Click"
                android:padding="@dimen/_5sdp"
                android:text="@string/check_now"
                android:textAllCaps="false"
                android:textColor="@color/pf_white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chronometer_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_resend_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_marginRight="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@android:color/white"
                android:clickable="true"
                android:onClick="btn_resend_Code"
                android:padding="@dimen/_5sdp"
                android:text="@string/btn_resend_code"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
