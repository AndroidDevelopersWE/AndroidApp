<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="co.dtechsystem.carefer.UI.Activities.MobileNumVerifyActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg_app" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_app_logo"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/confirm_mobile_number"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/enter_verification_code"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="4">

            <EditText
                android:id="@+id/et_1_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"
                android:background="@drawable/dr_edit_text_bk"
                android:gravity="center"
                android:hint="@string/code_eg"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusLeft="@+id/et_2_varify"
                android:padding="@dimen/_8sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_2_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"
                android:background="@drawable/dr_edit_text_bk"
                android:gravity="center"
                android:hint="@string/code_eg"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusLeft="@+id/et_3_varify"
                android:padding="@dimen/_8sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_3_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"
                android:background="@drawable/dr_edit_text_bk"
                android:gravity="center"
                android:hint="@string/code_eg"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusLeft="@+id/et_4_varify"
                android:padding="@dimen/_8sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_4_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"
                android:background="@drawable/dr_edit_text_bk"
                android:gravity="center"
                android:hint="@string/code_eg"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLength="1"
                android:maxLines="1"
                android:padding="@dimen/_8sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_verify_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@android:color/white"
            android:clickable="true"
            android:onClick="ben_Next_to_carafePolicy_Click"
            android:padding="@dimen/_13sdp"
            android:text="@string/check_now"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>
