<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreylight"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".UI.Activities.ShopsListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_main_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_7sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lay_dr_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:duplicateParentState="false"
                        android:onClick="btn_drawyerMenuOpen">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/ic_menu"
                            android:backgroundTint="@color/colorGrey"
                            android:clickable="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_title_shops_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/lay_dr_btn"
                        android:orientation="horizontal"
                        android:visibility="visible">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/_15sdp"
                            android:text="@string/shops_list"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_search_shops_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="0"
                            android:background="@android:drawable/ic_menu_search"
                            android:visibility="visible" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_et_search_shops_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/lay_dr_btn"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_search_close_shops_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="0"
                            android:background="@android:drawable/ic_menu_close_clear_cancel" />

                        <EditText
                            android:id="@+id/et_search_shops_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="@string/et_search_shop"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:padding="@dimen/_15sdp"
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_weight="1"
                android:background="@drawable/dr_corner_view_straight"
                android:padding="@dimen/_2sdp">

                <Spinner
                    android:id="@+id/sp_brand_type_shop_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"

                    android:prompt="@string/prompt_service" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/dr_corner_view_straight"
                android:padding="@dimen/_2sdp">

                <Spinner
                    android:id="@+id/sp_service_type_shops_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:prompt="@string/prompt_service" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_weight="1"
                android:background="@drawable/dr_corner_view_straight"
                android:padding="@dimen/_2sdp">

                <co.dtechsystem.carefer.Widget.MultiSpinner
                    android:id="@+id/sp_providers_shop_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_providers_shop_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:backgroundTint="@android:color/black"
                    android:drawableLeft="@android:drawable/arrow_down_float"
                    android:padding="@dimen/_5sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/dr_corner_view_straight"
                android:padding="@dimen/_2sdp">

                <Spinner
                    android:id="@+id/sp_cities_shops_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:prompt="@string/prompt_service"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_30sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/dr_btn_orange_angle_90"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_location_name_shops_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/riyadh_saduia"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="0"
                    android:background="@color/colorGrey" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="0"
                    android:background="@android:drawable/ic_dialog_map" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_shop_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:visibility="visible"
        app:headerLayout="@layout/nav_left_menu"
        app:itemBackground="@drawable/dr_list_item_drawyer_menu_click"
        app:itemIconTint="@color/colorHeliotrope"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>
